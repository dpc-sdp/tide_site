{
    "name": "dpc-sdp/tide_site",
    "description": "Post content to multiple sites and sections.",
    "type": "drupal-module",
    "license": "GPL-2.0-or-later",
    "require": {
        "dpc-sdp/tide_core": "^3.2.5",
        "dpc-sdp/tide_media": "^3.0.8",
        "drupal/create_menus_permission": "^1.0",
        "drupal/key_value_field": "^1.3"
    },
    "suggest": {
        "dpc-sdp/tide_api:^3.0.0": "Allows to use Drupal in headless mode"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8",
            "canonical": false
        },
        "drupal/entity_embed": {
            "type": "git",
            "url": "https://git.drupalcode.org/issue/entity_embed-3272732.git"
        },
        "drupal/video_embed_field": {
            "type": "vcs",
            "no-api": true,
            "url": "https://git.drupalcode.org/issue/video_embed_field-3311063.git"
        }
    },
    "extra": {
        "drush": {
            "services": {
                "drush.services.yml": "^10"
            }
        },
        "patches": {
            "drupal/core": {
              "Add a token for publication status - https://www.drupal.org/project/drupal/issues/3073554": "https://www.drupal.org/files/issues/2019-08-09/3073554_10.patch"
            },
            "drupal/linkit": {
                "Unpublished nodes not included even when option is selected - https://www.drupal.org/project/linkit/issues/3049946#comment-14953079": "https://www.drupal.org/files/issues/2023-03-06/linkit-unpublished-nodes-not-included-3049946-32.patch"
            }
        }
    }
}
